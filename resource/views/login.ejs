
<div
  class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom"
>
  <h2>login</h2>
</div>
<form action="/api/admin/login" method="post">
  <div class="form-group row"></div>

  <div class="form-group column">
    <div class="col">
      <label for="name" class="control-label font-weight-bold"></label>
        username
      </label>
      <input
        type="text"
        class="form-control"
        name="phone"
        placeholder="please enter a username"
        required
      />
    </div>
    <div class="col">
      <label for="password" class="control-label font-weight-bold"></label>
      password
      </label>
      <input
        type="text"
        class="form-control"
        name="password"
        placeholder="please enter a password"
        required
      />
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <button type="submit" class="btn btn-success">send</button>
    </div>
  </div>
</form>
